{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "Grafana Dashboard Reporter",
  "id": "cloudeteer-pdfreport-app",
  "backend": true,
  "executable": "gpx_pdfreport-app",
  "info": {
    "keywords": ["report", "pdf", "dashboards", "api"],
    "description": "A Grafana plugin app that generates PDF reports from Grafana dashboards",
    "author": {
      "name": "Mahendra Paipuri"
    },
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [
      {
        "name": "Project site",
        "url": "https://github.com/cloudeteer/grafana-pdf-report-app"
      },
      {
        "name": "License & Terms",
        "url": "https://github.com/cloudeteer/grafana-pdf-report-app/blob/main/LICENSE"
      }
    ],
    "screenshots": [
      { "name": "Configuration (Dark)", "path": "img/dark.png" },
      { "name": "Configuration (Light)", "path": "img/light.png" }
    ],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "includes": [
    {
      "type": "page",
      "name": "Status",
      "path": "/a/%PLUGIN_ID%/status",
      "role": "Viewer",
      "addToNav": true,
      "defaultNav": true
    },
    {
      "type": "page",
      "icon": "cog",
      "name": "Configuration",
      "path": "/plugins/%PLUGIN_ID%",
      "role": "Admin",
      "addToNav": false
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=11.0.0",
    "plugins": []
  },
  "iam": {
    "permissions": [
      { "action": "dashboards:read", "scope": "dashboards:*" },
      { "action": "dashboards:read", "scope": "folders:*" },
      { "action": "dashboards:read", "scope": "folders:uid:*" },
      { "action": "dashboards:read", "scope": "dashboards:uid:*" },

      { "action": "folders.permissions:read", "scope": "folders:*" },
      { "action": "folders:read", "scope": "folders:*" },
      { "action": "folders:read", "scope": "folders:uid:*" },
      { "action": "folders:read", "scope": "folders:uid:general" },
      { "action": "folders:read", "scope": "folders:uid:sharedwithme" },


      { "action": "annotations:read", "scope": "annotations:*" },
      { "action": "annotations:read", "scope": "annotations:type:organization" },
      { "action": "annotations:read", "scope": "folders:*" },
      { "action": "annotations:read", "scope": "annotations:type:*" },

      { "action": "dashboards.permissions:read", "scope": "dashboards:*" },
      { "action": "dashboards.permissions:read", "scope": "folders:*" },


      { "action": "datasources.id:read", "scope": "datasources:*" },

      { "action": "datasources:read", "scope": "datasources:uid:grafana" },
      { "action": "datasources:query", "scope": "datasources:*" },
      { "action": "datasources:read", "scope": "datasources:*" },
      
      { "action": "library.panels:read", "scope": "folders:*" },
      { "action": "library.panels:read", "scope": "folders:uid:general" }

    ]
  }
}
